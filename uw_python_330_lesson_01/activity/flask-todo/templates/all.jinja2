{% extends 'base.jinja2' %}

{% block subtitle %}All the things{% endblock subtitle %}

{% block content %}
<ul>
    {% for task in tasks %}
    <li>
        {{ task.name }}
        {% if task.performed %}
        Done {{ task.performed.strftime('%m-%d-%Y') }} by {{ task.performed_by.name }}
        {% else %}
        Undone
        {% endif %}
    </li>
    {% endfor %}
</ul>
{% endblock content %}